<div class="goat-show">
  <h1>Hello <%= current_user.first_name %></h1>
  <h1>Your Bookings:</h1>
  <% if @bookings.present? %>
    <% @bookings.each do |booking| %>
      <div>
        <h2>Booking ID: <%= booking.id %></h2>
        <p>Goat: <%= booking.goat.name %></p>
        <p>Start Date: <%= booking.start_date %></p>
        <p>End Date: <%= booking.end_date %></p>
      </div>
    <% end %>
  <% else %>
    <p>No bookings yet.</p>
  <% end %>
</div>
