    display: flex;
    justify-content: space-between;
    margin: 60px auto;
    min-height: 400px;
    width: 90%;
  }
  .goat-show-image {
    width: 25%;
    /* margin-left: 40px; */
  }

  .goat-show-image img {
    width: 100%;
    height: 100%;
    border-radius: 30px;
    box-shadow: rgba(0, 0, 0, 0.12) 0px 6px 16px;
    border: 1px solid rgb(221, 221, 221);
  }

  .goat-details {
    /* flex-grow: 1; */
    /* flex: 1; */
    /* padding-right: 20px; */
    display: flex;
    flex-direction: column;
    width: 45%;
    margin: 0 30px;
  }
  .detail {
    margin-bottom: 10px;
  }
  .goat-name {
    font-size: 4em;
    color: #333;
    /* margin-left: 20px; */
    margin-top: 30px;
  }
  .goat-description {
    font-style: normal;
    color: #333;
    /* margin-left: 20px; */
  }
  .goat-price {
    font-weight: bold;
    color: #333;
    font-size: 2em;
  }
  .booking-form {
    width: 30%;
    /* margin-right: 40px; */
    padding-top: 50px;
    padding: 40px;
    border: 1px solid rgb(221, 221, 221);
    border-radius: 30px;
    box-shadow: rgba(0, 0, 0, 0.12) 0px 6px 16px;
  }

  .description-header {
    color: #333;
    text-decoration: underline;
  }


  .attribute-bar {
    width: 500px;
    margin-top: 30px;
  }

  .bar-grid {
    height: 20px;
    background: #001d3d;
    border-radius: 30px;
  }

  .bar-border {
    border-radius: 30px;
    margin-left: 10px;
  }
  .bar-grid p {
    margin-top: 15px;
    margin-left: 10px;
    color: white;
  }





/* What is this? From Justin */
  hr {
    border: 0;
    height: 2px;
    background-image: linear-gradient(to right, rgba(0, 29, 61, 0), rgba(0, 29, 61, 0.75), rgba(0, 29, 61, 0));
    margin-bottom: 30px;
  }

<div style="width: 75%; height: 600px; margin: auto;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY']%>" >

</div>

  .list-group{
    border-radius: 15px;
    padding: 5px 30px;
    text-decoration: none;
    border-radius: 30px;
    width:300px;
    font-size: 5px;
    font-style: italic;
    color: #001d3d;
    font-size: 1.5em;
  }


  .box {
    border: 1px solid #ccc;
    padding: 15px;
    margin-bottom: 15px;
    border-radius: 30px;
  }

  .review-username {
    margin-bottom: 10px;
    text-decoration: underline;
  }

  .fa-star {
    color: gold;
    font-size: 16px;
  }


  .d-flex h2 {
    font-size: 16px;
  }


  .box h2 {
    font-size: 14px;
  }


</style>


<div class="goat-container">
  <div class="goat-show-image">
    <%= cl_image_tag(@goat.photo.key, crop: :fill) %>
  </div>

  <div class="goat-details">
    <div class="detail">
      <h2 class="goat-name"><%= @goat.name %></h2>
    </div>
    <div class="detail">
    <h3 class="description-header">Description:</h3>
      <p class="goat-description"><%= @goat.description %></p>
    </div>
  </div>

  <div class="booking-form">
    <%= simple_form_for [@goat, @booking] do |f| %>
      <p class="goat-price"><%= @goat.price %>â‚¬/Day</p>
      <div data-controller="booking-total-price" data-daily-price=<%= @goat.price %>>
        <%= f.input :start_date, as: :date, html5: true, input_html: { data: { booking_total_price_target: "startDate", action: "change->booking-total-price#calculate" } } %>
        <%= f.input :end_date, as: :date, html5: true, input_html: { data: { booking_total_price_target: "endDate", action: "change->booking-total-price#calculate" } } %>
        <div class="d-flex justify-content-between align-items-center" style="height: 86px;">
          <div data-booking-total-price-target="endPrice"></div>
          <%= f.submit "Book Now", class: "btn btn-default", data: {booking_total_price_target: "btn" } %>
        </div>
      </div>
    <% end %>
  </div>
</div>

