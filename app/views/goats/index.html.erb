<style>
  body {
    background-color: white;
  }

  h1 {
    text-align: center;
    color: #001d3d;
    padding-top: 50px;
    font-size: 90px;
  }

  p {
    text-align: center;
    color: #001d3d;
    margin: 0 auto;
  }

  .goat-listing {
    padding: 20px;
  }

  .row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 20px;
  }

  .col-md-4 {
    width: 30%;
  }

  .goat-container {
    /* background-color: white;
    border: 5px solid #ddd;
    border-color:#001d3d;
    border-radius: 15px;
    padding: 15px;
    text-align: center; */
    margin-bottom: 16px;
    transition: background-color 0.3s ease, transform 0.2s ease;
  }

  .goat-container:hover {
    transform: scale(1.05);
  }

  .goat-container p {
    text-align: left;
  }

  .goat-image {
    max-width: 100%;
    border-radius: 15px;
    height: 250px;
    transition: transform 0.2s ease;
  }

  .goat-container:hover .goat-image {
    transform: scale(1.0);
  }

  .goat-name {
    font-size: 1.2em;
    margin-top: 10px;
    color: #001d3d;
    font-weight: bold;
  }

  .goat-location {
    font-style: normal;
    color: #001d3d;
  }

  .goat-price {
    font-weight: normal;
    color: #38b000;
  }

   .goat-price.price {
    font-weight: normal;
    color: green;
  }

  .btn {
    background-color: #17283b;
    color: white;
    padding: 10px 20px;
  }

  .btn:hover {
   background-color: #ffc300;
   transition: 0.5s;
  }

  .form-control {
    border-radius: 20px;
    margin-right: 10px;
  }

  hr {
    border: 0;
    height: 2px;
    background-image: linear-gradient(to right, rgba(0, 29, 61, 0), rgba(0, 29, 61, 0.75), rgba(0, 29, 61, 0));
    margin-bottom: 50px;
  }

</style>

<h1><strong>Goats</strong></h1>

<hr>



<div class="w-50 mx-auto pt-1">
<p>Discover our fleet of professional goats ready to transform your lawn into a pristine paradise. From expert grass munching to eco-friendly fertilizing, our goats are here to make your outdoor space truly extraordinary.</p></p>
</div>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8 my-3">
      <%= form_with url: goats_path, method: :get, class: "d-flex" do |f| %>
        <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Type a keyword"
            %>
        <%= submit_tag "Search", name: "", class: "btn btn-default"%>
      <% end %>
    </div>
  </div>
<div class="goat-listing">
  <% @goats.each_slice(4) do |goat_batch| %>
    <div class="row justify-content-center">
      <% goat_batch.each do |goat| %>
        <div class="col-md-3">
          <%= link_to goat_path(goat), style: 'text-decoration: none;' do %>
            <div class="goat-container">
              <%= cl_image_tag(goat.photo.key, width: 400, height: 300, crop: :fill, class: 'goat-image') %>
              <h2 class="goat-name"><%= goat.name %></h2>
              <div class="goat-rating">
              </div>
              <p class="goat-location"><strong>Location:</strong> <%= goat.location %></p>
              <p class="goat-price">$<%= goat.price %>/Day</p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
</div>
