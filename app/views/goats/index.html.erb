<!-- app/views/goats/index.html.erb -->

<style>
  body {
    background-color: #001d3d;
  }

  h1 {
    text-align: center;
    color: white;
  }

  .goat-listing {
    padding: 20px;
  }

  .row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 20px;
  }

  .col-md-4 {
    width: 30%;
  }

  .goat-container {
    background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 15px;
    text-align: center;
  }

  .goat-image {
    max-width: 100%;
    border-radius: 5px;
  }

  .goat-name {
    font-size: 1.2em;
    margin-top: 10px;
    color: #333;
  }

  .goat-location {
    margin-top: 10px;
    font-style: italic;
    color: #555;
  }

  .goat-price {
    margin-top: 10px;
    font-weight: bold;
    color: #27ae60;
  }
</style>

<h1>Goats available</h1>

<div class="goat-listing">
  <% @goats.each_slice(3) do |goat_batch| %>
    <div class="row">
      <% goat_batch.each do |goat| %>
        <div class="col-md-4">
          <%= link_to goat_path(goat), style: 'text-decoration: none;' do %>
            <div class="goat-container">
              <%= cl_image_tag(goat.photo.key, width: 400, height: 300, crop: :fill, class: 'goat-image') %>
              <h2 class="goat-name"><%= goat.name %></h2>
              <div class="goat-rating">
              <!-- Display stars based on the review rating -->
              </div>
              <p class="goat-location"><%= goat.location %></p>
              <p class="goat-price">Price per Day: $<%= goat.price %></p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
